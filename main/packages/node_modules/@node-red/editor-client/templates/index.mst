<div class="container" style="position:fixed; bottom:0px; width:100%; height:25%">
    <ul class="tabs">
        <li class="tab-link current" data-tab="terminal-tab-1">Terminal</li>
        <li class="tab-link" data-tab="terminal-tab-2">Console</li>
        <li class="tab-link" data-tab="terminal-tab-3">Debug</li>
    </ul>
    <div id="terminal-tab-1" class="tab-content current">
        <div id="terminal"></div>
    </div>
    <div id="terminal-tab-2" class="tab-content"></div>
    <div id="terminal-tab-3" class="tab-content red-ui-editor red-ui-debug-window" style="height:100%">
        <script src="debug/view/debug-utils.js"></script>
        <script>
        RED.i18n.init({},function() {
            var options = {
                messageMouseEnter: function(sourceId) {
                    if (sourceId) {
                        var n = RED.nodes.node(sourceId);
                        if (n) {
                            n.highlighted = true;
                            n.dirty = true;
                        }
                        RED.view.redraw();
                    }
                },
                messageMouseLeave: function(sourceId) {
                    if (sourceId) {
                        var n = RED.nodes.node(sourceId);
                        if (n) {
                            n.highlighted = false;
                            n.dirty = true;
                        }
                        RED.view.redraw();
                    }
                },
                messageSourceClick: function(sourceId) {
                    RED.view.reveal(sourceId);
                },
                clear: function() {
                    RED.nodes.eachNode(function(node) {
                        node.highlighted = false;
                        node.dirty = true;
                    });
                    RED.view.redraw();
                }
            };

            var uiComponents = RED.debug.init(options);
            $(".red-ui-debug-window").append(uiComponents.content);
            console.log(RED.debug);
        });
        </script>
    </div>
    
</div>
<script>
    $(document).ready(function(){
    $('ul.tabs li').click(function(){
        var tab_id = $(this).attr('data-tab');
    
        $('ul.tabs li').removeClass('current');
        $('.tab-content').removeClass('current');
    
        $(this).addClass('current');
        $("#"+tab_id).addClass('current');
    })
    
    })
</script>
<script>
    var term = new Terminal({
        rows: 14
    });
    term.open(document.getElementById('terminal'));
    var socket = io('http://localhost:3000');
    socket.on('data', function(data) {
        term.write(data);
    });
    term.onKey(function(obj){
        var key = obj.key == '\r' ? '\r\n' : obj.key;
        socket.emit('data', key);
    });
</script>
